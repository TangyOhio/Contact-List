<%= form_for  @contact do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :birthday %>
  <%= f.text_field :birthday %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :eye_color %>
  <%= f.text_field :eye_color %>

  <%= f.label :right_handed %>
  <%= f.check_box :right_handed %>

  <%= f.submit %>
<% end %>